model Meeting {
  id        Int      @id @default(autoincrement())
  title     String
  startTime DateTime
  endTime   DateTime
  attendees User[]   
  // # Other relevant fields like description, location etc.
}

model User {
  id     Int      @id @default(autoincrement())
  email  String  @unique
  name   String
  meetings  Meeting[]   // This is the added relation field
  // Other user related fields
}